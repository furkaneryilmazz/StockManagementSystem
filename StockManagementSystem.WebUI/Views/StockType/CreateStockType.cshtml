@model StockType
@{
    ViewData["Title"] = "CreateStockType";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<!-- Modal Trigger Button -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#stockTypeModal">
    Stok Türü Ekle
</button>

<!-- Modal -->
<div class="modal fade" id="stockTypeModal" tabindex="-1" role="dialog" aria-labelledby="stockTypeModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="stockTypeModalLabel">Stok Türü Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Form Başlangıcı -->
                <form asp-action="CreateStockType" method="post" id="stockTypeForm">
                    <div class="form-group">
                        <label>Stok Türü</label>
                        <input asp-for="StockTypeName" class="form-control" />
                        <span asp-validation-for="StockTypeName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Aktif mi?</label>
                        <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                    </div>
                </form>
                <!-- Form Sonu -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                <button type="submit" form="stockTypeForm" class="btn btn-primary">Kaydet</button>
                <a asp-action="Index" class="btn btn-secondary">Ana Sayfaya Geri Dön</a>
            </div>
        </div>
    </div>
</div>
