@model List<StockType>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Stok Türü</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.StockTypeName</td>
            <td>@(item.IsActive == true ? "Aktif" : "Aktif Değil")</td>
            <td><a href="/StockType/DeleteStockType/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/StockType/EditStockType/@item.Id" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sayfalar</h4>
            <div class="bootstrap-pagination">
                <nav>
                    <ul class="pagination">
                        @if (ViewBag.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="/StockType/Index?page=@(ViewBag.CurrentPage - 1)" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                        }

                        @for (var i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="/StockType/Index?page=@i">@i</a>
                            </li>
                        }

                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="/StockType/Index?page=@(ViewBag.CurrentPage + 1)" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<a href="/StockType/CreateStockType/" class="btn btn-info">Stok Türü Ekle</a>


